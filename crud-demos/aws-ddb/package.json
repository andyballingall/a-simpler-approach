{
  "name": "aws-ddb",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "bootstrap": "bun run infra/bootstrap.ts",
    "dev": "DYNAMODB_ENDPOINT=http://localhost:4566 bun run src/index.ts",
    "test:integration": "bun run test/integration.ts",
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "local:init": "bun run infra:up && bun run bootstrap && bun run dev",
    "local:pipe": "bun run infra/local-pipe.ts",
    "check": "bun x biome check .",
    "check:fix": "bun x biome check --write .",
    "format": "bun x biome format .",
    "lint": "bun x biome lint ."
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb-streams": "^3.952.0",
    "@aws-sdk/client-iam": "^3.948.0",
    "@aws-sdk/client-pipes": "^3.948.0",
    "@aws-sdk/client-sqs": "^3.948.0",
    "@aws-sdk/util-dynamodb": "^3.952.0",
    "@biomejs/biome": "^2.3.9",
    "@types/bun": "^1.3.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.948.0",
    "@aws-sdk/client-eventbridge": "^3.948.0",
    "@aws-sdk/lib-dynamodb": "^3.948.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "hono": "^4.11.1"
  }
}
