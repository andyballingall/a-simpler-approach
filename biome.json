{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.git",
			"!**/.husky",
			"!**/.vscode",
			"!**/bun.lock"
		]
	},
	"linter": {
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
