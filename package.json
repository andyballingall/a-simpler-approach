{
  "name": "a-simpler-approach-root",
  "private": true,
  "scripts": {
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "**/*.{md,yml,yaml}": "bun x prettier --check",
    "crud-demos/**/*.{ts,json}": [
      "echo 'Linting crud-demos...'",
      "cd crud-demos/aws-ddb && bun x biome check"
    ],
    "simpler-sor/**/*.{ts,json}": [
      "echo 'Linting simpler-sor...'",
      "cd simpler-sor && bun x biome check"
    ],
    "example-docs/**/*.json": [
      "echo 'Linting example-docs...'",
      "cd example-docs && bun x biome check"
    ]
  }
}
